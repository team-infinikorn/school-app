<div class="bg-white mt-2 border-bottom">
  <div class="content-header p-0">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Invite Student</h1>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for @invitation, class: 'form submit-form' do |f| %>
  <div class="card-body p-md-4 p-2" data-controller="select2">
    <div class="row">
      <hr>
      <div class="col-sm-12 mb-3">
        <div class="form-group">
          <%= f.label :email, 'Invitee Email', class: 'd-block' %>
          <%= f.text_field :email, label: 'Email *', placeholder: 'Enter email', class: 'form-control' %>
          <span class="text-error"><%= @invitation.errors.full_messages.to_sentence %></span>
        </div>
      </div>

      <div class="col-sm-10 mt-3">
        <button class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
<% end %>
